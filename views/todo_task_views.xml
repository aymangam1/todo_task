<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_todo_task_tree" model="ir.ui.view">
        <field name="name">todo.task.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="color" widget="color"/>
                <field name="deadline"/>
                <field name="priority"/>
                <field name="is_completed"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_todo_task_form" model="ir.ui.view">
        <field name="name">todo.task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color"/>
                        <field name="deadline"/>
                        <field name="priority"/>
                        <field name="is_completed"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_todo_task_backend" model="ir.actions.act_window">
        <field name="name">ToDo Tasks</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_todo_task_backend"
              name="Tasks"
              parent="menu_todo_root"
              action="action_todo_task_backend"
              sequence="10"/>

    <record id="action_bus_test_client" model="ir.actions.client">
        <field name="name">Bus Test</field>
        <field name="tag">bus_test.client_action</field>
    </record>

    <menuitem id="menu_bus_test"
              name="Bus Test"
              sequence="100"
              parent="menu_todo_root"/>

    <menuitem id="menu_bus_test1"
              name="Bus Test JS"
              sequence="100"
              parent="menu_bus_test"
              action="action_bus_test_client"/>

    <record id="action_bus_test_tree" model="ir.actions.act_window">
        <field name="name">Bus Test Records</field>
        <field name="res_model">bus.test</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_bus_test2"
              name="Bus Test Python"
              sequence="100"
              parent="menu_bus_test"
              action="action_bus_test_tree"/>
</odoo>
