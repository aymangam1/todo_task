<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
<t t-name="todo_task.TodoItem">

<!-- üö© ÿ≠ÿßŸÑÿ© ÿßŸÑÿ¨ÿØŸàŸÑ -->
<tr t-if="props.viewMode === 'table'">
    <td>
        <input type="checkbox" class="form-check-input" t-att-checked="state.isCompleted" t-on-click="toggleTask"/>
    </td>

    <!-- ÿ•ÿ∞ÿß ŸÅŸä Ÿàÿ∂ÿπ ÿßŸÑÿ™ÿπÿØŸäŸÑ -->
    <td t-if="state.isEditing">
        <input type="text" class="form-control form-control-sm" t-model="state.name"/>
    </td>
    <td t-if="!state.isEditing">
        <t t-esc="state.name"/>
    </td>

    <td t-if="state.isEditing">
        <input type="date" class="form-control form-control-sm" t-model="state.deadline"/>
    </td>
    <td t-if="!state.isEditing">
        <t t-esc="state.deadline"/>
    </td>

    <td t-if="state.isEditing">
        <select class="form-select form-select-sm" t-model="state.priority">
            <option value="0">Low</option>
            <option value="1">Normal</option>
            <option value="2">High</option>
        </select>
    </td>
    <td t-if="!state.isEditing">
        <t t-esc="{'0': 'Low', '1': 'Normal', '2': 'High'}[state.priority]"/>
    </td>

    <td t-if="state.isEditing">
        <input type="text" class="form-control form-control-sm" t-model="state.note"/>
    </td>
    <td t-if="!state.isEditing">
        <t t-esc="state.note"/>
    </td>

    <td>
        <button t-if="!state.isEditing" class="btn btn-sm btn-primary me-1" t-on-click="editTask">‚úèÔ∏è</button>
        <button t-if="state.isEditing" class="btn btn-sm btn-success me-1" t-on-click="saveTask">‚úÖ</button>
        <button class="btn btn-sm btn-danger" t-on-click="deleteTask">üóëÔ∏è</button>
    </td>
</tr>

<!-- üö© ÿ®ÿßŸÇŸä ÿßŸÑÿ≠ÿßŸÑÿßÿ™ -->
<li t-if="props.viewMode !== 'table'" t-attf-style="background-color:{{state.color}}" class="d-flex align-items-center justify-content-between border p-2 rounded mb-2">

    <div t-if="state.isEditing" class="d-flex flex-column flex-grow-1 me-2">
        <div class="d-flex mb-1">
            <input type="text" class="form-control me-2" t-model="state.name"/>
            <input type="color" class="form-control form-control-color" style="width: 3rem;" t-model="state.color"/>
        </div>
        <div class="d-flex mb-1">
            <input type="date" class="form-control me-2" t-model="state.deadline"/>
            <select class="form-select" t-model="state.priority">
                <option value="0">Low</option>
                <option value="1">Normal</option>
                <option value="2">High</option>
            </select>
        </div>
        <textarea class="form-control" rows="2" placeholder="Note" t-model="state.note"/>
    </div>

    <div t-if="!state.isEditing" class="flex-grow-1">
        <div class="form-check form-switch mb-1">
            <input class="form-check-input" type="checkbox" t-att-checked="state.isCompleted" t-on-click="toggleTask"/>
            <label t-attf-class="{{state.isCompleted ? 'text-decoration-line-through' : ''}}">
                <t t-esc="state.name"/>
            </label>
        </div>
        <div class="small text-muted">
            <t t-if="state.deadline">üìÖ <t t-esc="state.deadline"/></t>
            <t t-if="state.priority"> | üî•
                <t t-esc="{'0': 'Low', '1': 'Normal', '2': 'High'}[state.priority]"/>
            </t>
        </div>
        <div class="small text-secondary" t-if="state.note">
            üìù <t t-esc="state.note"/>
        </div>
    </div>

    <div>
        <button t-if="!state.isEditing" class="btn btn-sm btn-primary me-1" t-on-click="editTask">‚úèÔ∏è</button>
        <button t-if="state.isEditing" class="btn btn-sm btn-success me-1" t-on-click="saveTask">‚úÖ</button>
        <button class="btn btn-sm btn-danger" t-on-click="deleteTask">üóëÔ∏è</button>
    </div>
</li>

</t>
</templates>
